\mode<presentation>
\RequirePackage{tikz}
\RequirePackage{xcolor}
% Fonts!

\usefonttheme{professionalfonts}
\setbeamerfont{title}{size = \huge}
\setbeamerfont{caption}{size=\scriptsize}
\setbeamerfont{frametitle}{size = \Large}

\setbeamertemplate{navigation symbols}{}
\setbeamertemplate{blocks}[rounded][shadow=true]
\setbeamertemplate{itemize items}{\bf{-}}
\setbeamertemplate{caption}[numbered]

% Color

\definecolor{a1}{Hsb}{215, 0.40, 0.40}
\definecolor{a2}{Hsb}{215, 0.40, 0.40}

\definecolor{b1}{Hsb}{35, 0.40, 0.40}
\definecolor{b2}{Hsb}{35, 0.40, 0.40}

\definecolor{c1}{Hsb}{125, 0.40, 0.40}
\definecolor{c2}{Hsb}{125, 0.80, 0.40}

\definecolor{process}{HTML}{3d5f8f}
\definecolor{data}{HTML}{8f6d3d}

\definecolor{black}{HTML}{172436}
\definecolor{white}{HTML}{ffffff}

\definecolor{gray}{Hsb}{215, 0.00, 0.40}

% use colors for presentation parts
\setbeamercolor{frametitle}{fg = white}
\setbeamercolor{caption name}{fg = c2}
\setbeamercolor{normal text}{fg = black}
\setbeamercolor{alerted text}{fg=c2}
\setbeamercolor{caption}{fg = black}

\setbeamercolor{title page header}{fg = white}
\setbeamercolor{author}{fg=white}
\setbeamercolor{date}{fg=white}

\setbeamercolor{item}{fg = black}
\setbeamercolor{subitem}{fg = black}


% title Slide

\setbeamertemplate{background}{
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
  \fill[top color = a1, bottom color = a1] (0,3) rectangle (\the\paperwidth,\the\paperheight);
  \fill[top color = c1, bottom color = c1] (0,0) rectangle(3.90,2.8);
  \fill[top color = b1, bottom color = b1] (4.10,0) rectangle(\the\paperwidth,2.8);
  \ifnum\thepage>1\relax%
   \fill[white,opacity=1] (0,0) rectangle(\the\paperwidth,\the\paperheight);
   \fi
  \end{tikzpicture}
}
\defbeamertemplate*{title page}{ben}[1][]
{
   \vskip4cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=2cm,sep=8pt,#1]{title page header}
      \usebeamerfont{title}\inserttitle\par%
    \end{beamercolorbox}%
    \vskip0.75cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=4.5cm,#1]{author}
      \usebeamerfont{author}\insertauthor%
    \end{beamercolorbox}
     \vskip0.2cm%
    \begin{beamercolorbox}[wd=12cm,leftskip=4.5cm,#1]{date}
      \usebeamerfont{author}\insertdate%
    \end{beamercolorbox}
  \vfill
}

% Frame title
\defbeamertemplate*{frametitle}{ben}[1][]
{
  \begin{beamercolorbox}[wd=\paperwidth,ht=1.2cm]{frametitle}
  \begin{tikzpicture}
  \useasboundingbox[fill=white](0,-0.1) rectangle(\the\paperwidth,1.3);
  \fill[left color = a1, right color = b1] (0, 0) rectangle(\the\paperwidth,1.3);
   \ifx\insertframesubtitle\@empty%
      {\node[anchor=west, white,font=\large] at (0,0.6){\insertframetitle};}
      \else%
      {\node[anchor= west, white,font=\large] at (0,0.8){\insertframetitle};%
       \node[anchor= west, white,font=\small] at (0,0.4){\insertframesubtitle};}%
      \fi
  \end{tikzpicture}
  \end{beamercolorbox}
}

\AtBeginSection[]{
  \begin{frame}
  \begin{beamercolorbox}[wd=\paperwidth,ht=\paperheight]{frametitle}
  \begin{tikzpicture}
  \useasboundingbox (0,0) rectangle(\the\paperwidth,\the\paperheight);
  \fill[black!40] (0,6) rectangle (\the\paperwidth,10.7);
  \fill[left color = a1, right color = b1] (0, 3.8) rectangle(\the\paperwidth,5.8);
  \fill[black!40] (0,0) rectangle (\the\paperwidth,3.6);
  \node[anchor=west, white] at (1,4.8){\usebeamerfont{title}\insertsectionhead};
  \end{tikzpicture}
  \end{beamercolorbox}
  \end{frame}
}


\mode<all>
